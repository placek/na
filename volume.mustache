<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <style>
    @font-face { font-family: greek; src: url(/home/placek/Projects/books/NA27S/public/assets/fonts/newathu.ttf); }
    @font-face { font-family: iosevka; src: url(/home/placek/Projects/books/NA27S/public/assets/fonts/iosevka.ttf); }
    :root {
      --nigrica:    #282828;
      --rubrica:    #9d0006;
      --didascalia: #504945;
    }
    body                           { font-size: 1.1em; text-align: justify; }
    section                        { display: inline; }
    p                              { display: inline; font-family: greek; align-content: space-between; color: var(--nigrica); margin: 0; padding: 1em 0; }
    p:before                       { content: attr(id); font-size: .5em; white-space: pre; color: var(--didascalia); padding: 0; font-family: iosevka; font-weight: bold; }
    section p:first-of-type:before { font-size: 1em; }
    span                           { padding: .2em; text-align: center; break-inside: avoid; display: inline-block;}
    span:after                     { content: attr(data-translation) "\a" attr(data-strong) " " attr(data-morphology); white-space: pre; font-size: .5em; color: var(--didascalia); font-family: iosevka; display: block; text-align: center; }
    span[data-red=true]            { color: var(--rubrica); }
  </style>
</head>

<body>
{{# books }}
{{> book }}
{{/ books }}
</body>
</html>
